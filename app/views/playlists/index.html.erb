<section class="hero is-small">
  <div class="hero-body">
    <h1 class="title">Playlists</h1>
    <p class="subtitle">These are all the playlists generated for your past workouts.</p>
    <hr>
  </div>
</section>

<section class="container">
<% if @playlists.any? %>
  <table class="table is-striped is-fullwidth">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created</th>
        <th class="has-text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @playlists.each do |playlist| %>
        <tr>
          <td><%= link_to playlist.name, "https://open.spotify.com/playlist/#{playlist.spotify_playlist_id}", target: "_blank" %></td>
          <td><%= playlist.description %></td>
          <td><%= playlist.todays? ? "<strong>Today</strong>".html_safe : playlist.created_at.in_time_zone(current_user.preference.timezone).strftime("%m/%d/%Y") %></td>
          <td>
            <div class="field is-grouped is-grouped-right" id="playlist_actions_<%= playlist.id %>">
              <%= render partial: 'playlists/actions', locals: { playlist: playlist } %>
            </div>
          </td>
        </tr>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @playlists, outer_window: 1, window: 1 %>
<% else %>
  <div class="notification">
    <strong>You don’t have any playlists yet.</strong> Why don’t you go add some workouts to your calendar?
  </div>
<% end %>
</section>
