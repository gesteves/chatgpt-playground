<div id="<%= dom_id(track) %>" class="card">
  <div class="card-image">
    <iframe style="border-radius:12px" src="<%= track.spotify_iframe_url %>" width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  </div>
  <div class="card-content">
    <div class="level">
      <div class="level-left">
        <div class="field is-grouped is-grouped-multiline">
          <div class="control">
            <div class="tags has-addons">
              <span class="tag is-dark"><i class="fa-solid fa-clock"></i></span>
              <span class="tag"><%= non_breaking_time_ago(track.created_at) %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="level-right">
        <div class="field is-grouped is-grouped-right">
          <%= button_to track_path(track), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this track? This canâ€™t be undone.' }, class: "button is-danger" do %>
            <span class="icon">
              <i class="fa-solid fa-trash"></i>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
